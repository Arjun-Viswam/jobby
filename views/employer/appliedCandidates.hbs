  <link rel="stylesheet" href="/main/css/style.css">

<div class="account_tabs">
<ul class="nav nav-tabs">
<li class="nav-item">
<a class="nav-link" href="/employer/dashboard">Dashboard</a>
</li>
<li class="nav-item">
<a class="nav-link" href="/employer/emp-profile">Profile</a>
</li>
<li class="nav-item">
<a class="nav-link" href="/employer/postjob">Post Job</a>
</li>
<li class="nav-item">
<a class="nav-link active" href="/employer/postedjob">Posted Jobs</a>
</li>
</ul> 
</div>
{{#if candidates}}
<div class="view_chart">
<div class="view_chart_header">
<h4>Applied Candidates</h4>
</div>
<div class="job_bid_body">
<ul class="all_applied_jobs jobs_bookmarks">
{{#each candidates}}
<li>
<div class="applied_candidates_item">
<div class="applied_candidates_dt">
<div class="candi_img">
<img src="/profile-photos/{{this.userId}}.jpg" alt="">
</div>
<div class="candi_dt">
<a href="/employer/candidateProfile/{{this.userId}}">{{this.firstname}} {{this.lastname}}</a>
<div class="candi_cate">{{this.qualification}}</div>
<div class="view_chart_body">
<div class="job-skills">
    {{#each skills}}
<a class="more-skills">{{this}}</a>
{{/each}}
</div>
</div>
</div>
</div>
<div class="btn_link24">
<a id="link" href="/resume/{{this.userId}}.pdf" download><button class="apled_btn50">Download CV</button></a>
<a href="/employer/machinetest/{{this.userId}}"><button class="apled_btn70" >Machine Test</button></a>
<a href="/employer/answerkey/{{this.userId}}/{{this.jobId}}"><button class="apled_btn70" >Answer key</button></a>
<a href="/employer/removeCandidate/{{this.userId}}/{{this.jobId}}" onclick="return confirm('remove{{this.firstname}}{{this.lastname}}')" class="delete_icon1"><i class="far fa-trash-alt"></i></a>

 <input id="from" type="text" value="{{../employers._id}}" hidden/>
        <input id="to" type="text" value="{{this.userId}}"  hidden/>
 <!-- Modal -->
    <div class="modal fade" id="myModal" role="dialog">
      <div class="modal-dialog">

        <!-- Modal content-->
        <div class="modal-content">
          <div class="modal-header">
            <h4 class="modal-title">Sent Notification</h4>
          </div>
          <div class="modal-body">
            <form action="/employer/notification" method="POST" id="usrform">
             <input type="text" id="userId" name="userId" value="{{this.userId}}" hidden>
             <input type="text" id="jobId" name="jobId" value="{{this.jobId}}" hidden>
             <input type="text" id="companyId" name="companyId" value="{{../employers._id}}" hidden> 
             <input type="text" id="companyname" name="companyname" value="{{../employers.companyname}}" hidden> 

            <br>
            <textarea rows="4" cols="50" id="message" name="message" form="usrform">
           </textarea>
           
          </div>
          <div class="modal-footer">
              <button type="submit" onclick="sendMessage()" class="apled_btn50">Sent</button>
             
            </form>
          </div>
        </div>

      </div>
    </div>
</div>
</div>
</li>
{{/each}}

</ul>
</div>
</div>
{{else}}
<h1>&nbsp;</h1>
<h2>No Candidates Applied yet</h2>
{{/if}}

</div>
</div>
</div>
</main>

