<main class="browse-section">
  <div class="container">
    <div class="row">
      <div class="col-md-8">
        <div class="main-heading bids_heading">
          <h2>Create Profile</h2>
          <div class="line-shape1">
            <img src="images/line.svg" alt="" />
          </div>
        </div>
        <div class="post501">
          <form
            method="POST"
            action="/edit-profile/{{users._id}}"
            id="userProfile"
            enctype="multipart/form-data"
          >
            <div class="row">
              <div class="col-lg-12">
                <div class="form-group">
                  <label class="label15">Profile Avtar*</label>
                  <div class="avtar_dp">
                    {{#if users.status}}
                      <img
                        id="imgview1"
                        src="/profile-photos/{{users._id}}.jpg"
                        alt=""
                      />
                    {{else}}
                      <img id="imgview2" src="/images/profile_dp.jpg" alt="" />
                    {{/if}}
                  </div>

                  <div class="image-upload-wrap1 ml5">
                    <input
                      class="file-upload-input1"
                      type="file"
                      name="image2"
                      id="file2"
                      class="form-control"
                      onchange="return fileValidation2()"
                    />
                    <div class="drag-text1">
                      Upload Files
                    </div>
                  </div>
                </div>
              </div>

              <div class="col-lg-6">
                <div class="form-group">
                  <label class="label15">First Name*</label>
                  <input
                    type="text"
                    class="job-input"
                    name="firstname"
                    value="{{users.firstname}}"
                    placeholder="Your First Name"
                  />
                </div>
              </div>
              <div class="col-lg-6">
                <div class="form-group">
                  <label class="label15">Last Name*</label>
                  <input
                    type="text"
                    class="job-input"
                    name="lastname"
                    value="{{users.lastname}}"
                    placeholder="Your Last Name"
                  />
                </div>
              </div>
              <div class="col-lg-6">
                <div class="form-group">
                  <label class="label15">Email Address*</label>
                  <input
                    type="email"
                    class="job-input"
                    name="email"
                    value="{{users.email}}"
                    placeholder="Enter Your Email Address"
                  />
                </div>
              </div>
              <div class="col-lg-6">
                <div class="form-group">
                  <label class="label15">Birthday*</label>
                  <div class="smm_input">
                    <input
                      type="date"
                      class="job-input"
                      name="birthdate"
                      value="{{users.birthdate}}"
                      placeholder="Enter your Birthdate"
                    />
                  </div>
                </div>
              </div>
              <div class="col-lg-12">
                <div class="form-group">
                  <label class="label15">Description*</label>
                  <div class="description_dtu">

                    <input
                      class="textarea70"
                      name="discription"
                      placeholder="Describe your experience, skills, etc. In complete details. "
                      value="{{users.discription}}"
                    />
                  </div>
                </div>
              </div>
              <div class="col-lg-6">
                <div class="form-group">
                  <label class="label15">Contact Number*</label>
                  <div class="smm_input">
                    <input
                      type="tel"
                      class="job-input"
                      onkeypress="return event.charCode >= 48 && event.charCode <= 57"
                      id="phone"
                      name="mobile"
                      value="{{users.mobile}}"
                      placeholder="Enter Your Contact Number"
                    />
                  </div>
                </div>
              </div>
              <div class="col-lg-6">
                <div class="form-group">
                  <label class="label15">Tagline*</label>
                  <input
                    type="text"
                    class="job-input"
                    name="tagline"
                    value="{{users.tagline}}"
                    placeholder="Wordpress Developer"
                  />
                </div>
              </div>

              <div class="col-lg-12">
                <div class="form-group">
                  <label class="label15">Skills*</label>
                  <input
                    type="text"
                    class="job-input"
                    name="skills"
                    placeholder="Enter the skills you prefer eg: Nodejs,python"
                    value="{{users.skills}}"
                  />
                </div>
              </div>
              <div class="col-lg-6">
                <div class="form-group">
                  <label class="label15">Availability*</label>
                  <div class="ui fluid search selection">
                    <select
                      class="form-control"
                      style="height: 3em; -webkit-appearance:none; border: 1px solid #e5e5e5;"
                      name="availability"
                      id="availability"
                    >
                      <option class="item" id="Full Time">Full Time</option>
                      <option class="item" id="Part Time">Part Time</option>
                      <option class="item" id="Not Available">Not Available</option>
                    </select>
                  </div>
                </div>
              </div>
              <div class="col-lg-6">
                <div class="form-group">
                  <label class="label15">Experience Level*</label>
                  <div class="ui fluid search selection">
                    <select
                      class="form-control"
                      style="height: 3em; -webkit-appearance:none; border: 1px solid #e5e5e5;"
                      name="experience"
                      id="experience"
                    >
                      <option class="item" id="None">None</option>
                      <option class="item" id="level 01">level 01</option>
                      <option class="item" id="level 02">level 02</option>
                      <option class="item" id="level 03">level 03</option>
                      <option class="item" id="level 04">level 04</option>
                      <option class="item" id="level 05">level 05</option>
                      <option class="item" id="level 06">level 06</option>
                      <option class="item" id="level 07">level 07</option>
                      <option class="item" id="level 08">level 08</option>
                      <option class="item" id="level 09">level 09</option>
                      <option class="item" id="level 10">level 10</option>
                    </select>
                  </div>
                </div>
              </div>
              <div class="col-lg-12">
                <div class="form-group">
                  <label class="label15">Language*</label>
                  <input
                    type="text"
                    class="job-input"
                    name="language"
                    placeholder="Enter the language you prefer eg:English,Hindi"
                    value="{{users.language}}"
                  />
                </div>
              </div>
              <div class="col-lg-12">
                <div class="form-group">
                  <label class="label15">Location*</label>
                  <div class="smm_input">
                    <input
                      type="text"
                      class="job-input"
                      name="location"
                      value="{{users.location}}"
                      placeholder="Type Address"
                    />
                  </div>
                </div>
              </div>
              <div class="col-lg-12">
                <div class="form-group">
                  <label class="label15">Websites*</label>
                  <div class="smm_input5">
                    <input
                      type="text"
                      class="website-input"
                      name="link1"
                      value="{{users.link1}}"
                      placeholder="http://entercompanysite.com/"
                    />
                    <div class="loc_icon5"><i class="fas fa-globe"></i></div>
                  </div>
                  <div class="smm_input5">
                    <input
                      type="text"
                      class="website-input"
                      name="link2"
                      value="{{users.link2}}"
                      placeholder="http://enterblogsite.com/"
                    />
                    <div class="loc_icon5"><i class="far fa-edit"></i></div>
                  </div>
                  <div class="smm_input5">
                    <input
                      type="text"
                      class="website-input"
                      name="link3"
                      value="{{users.link3}}"
                      placeholder="http://enterportfoliosite.com/"
                    />
                    <div class="loc_icon5"><i class="fas fa-columns"></i></div>
                  </div>
                </div>
              </div>
              <input hidden id="userId" value="{{users._id}}" />
              <div class="col-lg-12">
                <button class="post_jp_btn" type="submit">Finish Profile</button>
              </div>
            </div>
          </form>
        </div>
      </div>
      <div class="col-md-4">
        <div class="main-heading bids_heading pjfaq80">
          <h2>FAQ</h2>
        </div>
        <div class="jp_faq">
          <div class="jp_faq_item">
            <h4>01. Complete your profile</h4>
            <p>Lorem ipsum dolor sit amet, consectetur adipiscing elit.
