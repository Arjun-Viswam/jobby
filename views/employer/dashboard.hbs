<script>
var ctx = document.getElementById('myPieChart').getContext('2d');
var myChart = new Chart(ctx, {
    type: 'pie',
    data: {
        labels: ['Jobs','Active','Expired'],
        datasets: [{
            label: 'Jobs',
            data: [{{pieChart}}],
            backgroundColor: [
                'rgba(10, 167, 212, 0.8)',
